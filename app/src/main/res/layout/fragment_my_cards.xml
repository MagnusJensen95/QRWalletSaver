<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qrapp.fragments.MyCardsFrag">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/currrentSelectionList">


    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:entries="@array/memberships"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/QRImage"
            android:layout_centerHorizontal="true"


            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barcodeImage"
            android:layout_below="@+id/QRImage"
            android:layout_centerHorizontal="true"


            />

        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"

            android:id="@+id/numberText"
            android:layout_below="@+id/barcodeImage"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSpinner"
            android:entries="@array/editCardOptions"
            android:layout_below="@id/numberText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">



        </Spinner>
    </RelativeLayout>


</FrameLayout>
